# -*- mode: sh; -*-
command -v rbenv >/dev/null 2>&1 || return

eval "$(rbenv init -)"

# Ignore .ruby-version for certain commands
#
# Create a wrapper with the following content in ~/.rbenv/bin.local/COMMAND

: <<EOF
#!/bin/sh

program="${0##*/}"
export RBENV_VERSION=$(cd "${HOME}"; rbenv version-name)
eval "$(rbenv init - --no-rehash)"
exec "$program" "$@"
EOF

export PATH="$HOME/.rbenv/bin.local:$PATH"
