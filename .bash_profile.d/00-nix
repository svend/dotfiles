# -*- mode: sh; -*-

if [ -f "$HOME/.nix-profile/etc/profile.d/nix.sh" ]; then
  . "$HOME/.nix-profile/etc/profile.d/nix.sh"
  export XDG_DATA_DIRS="$HOME/.nix-profile/share:$XDG_DATA_DIRS"
fi

# Copy of $HOME/.nix-profile/etc/ssl/certs/ca-bundle.crt with additional local
# certs added
if [ -e "$HOME/.certs/ca-bundle.crt" ]; then
  export NIX_SSL_CERT_FILE="$HOME/.certs/ca-bundle.crt"
  export REQUESTS_CA_BUNDLE="$NIX_SSL_CERT_FILE"
fi
