# Git config file

[alias]
	branches-by-date = branch --format='%(creatordate:short) %(refname:short) %(contents:subject)' --sort=creatordate
	# Delete local branches that have been merged to master
	branch-cleanup = ! git branch --merged master | grep -v master | xargs git branch -d
	branch-current = rev-parse --abbrev-ref HEAD
	tags-by-date = tag --format='%(creatordate:short) %(refname:short)' --sort=creatordate
	# Fetch PR branches
	prs = "! git config --replace-all remote.origin.fetch '+refs/pull/*/head:refs/remotes/origin/pr/*' '^\\+refs/pull/\\*/head:refs/remotes/origin/pr/\\*$' && git fetch origin"
	# Set correct remote ref for PR branches
	pr = "! [ -n \"$1\" ] && git config --replace-all branch.pr/$1.merge refs/pull/$1/head"

# Omit a/b prefix so that find-file-at-point works
[diff]
	noprefix = true

[github]
	user = svend

[hub]
	protocol = https

[merge]
	tool = ediff

[mergetool "ediff"]
	cmd = emacsclient -c -a \"\" --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"

[pull]
	ff = only

[tag]
	sort = version:refname

[url "git@github.com:"]
	pushInsteadOf = https://github.com/

[url "git@gist.github.com:"]
	pushInsteadOf = https://gist.github.com/

[url "ssh://git@git.zx2c4.com/"]
	pushInsteadOf = https://git.zx2c4.com/

[user]
	name = Svend Sorensen
	email = svend@svends.net

# This include must come last
[include]
	path = config.local
