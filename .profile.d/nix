# -*- mode: sh; -*-
[ -f "$HOME/.nix-profile/etc/profile.d/nix.sh" ] || return
# Avoid sourcing multiple times
[ -z "$NIX_PATH" ] || return

. "$HOME/.nix-profile/etc/profile.d/nix.sh"
[ -e "$HOME/.certs/ca-bundle.crt" ] && export SSL_CERT_FILE="$HOME/.certs/ca-bundle.crt"
if [ -d "$HOME/.nix-profile/Applications/Emacs.app/Contents/MacOS/bin" ]; then
  export PATH="$HOME/.nix-profile/Applications/Emacs.app/Contents/MacOS/bin":$PATH
fi
