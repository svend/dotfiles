# Set the editor to emacsclient, vim, or vi

if command -v vim >/dev/null 2>&1; then
  EDITOR=vim
else
  EDITOR=vi
fi

if command -v emacsclient >/dev/null 2>&1; then
  # Fall back to vim or vi if emacs isn't running
  export ALTERNATE_EDITOR=$EDITOR
  EDITOR=emacsclient
fi

VISUAL=$EDITOR
export EDITOR
export VISUAL
