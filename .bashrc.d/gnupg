# -*- mode: sh; -*-
GPG_TTY=$(tty)
export GPG_TTY

gpgconf --lauch gpg-agent
if [ "$(gpgconf --list-options gpg-agent | grep '^enable-ssh-support:' | cut -d : -f 10)" = "1" ]; then
  if [ "${gnupg_SSH_AUTH_SOCK_by:-0}" -ne $$ ]; then
    export SSH_AUTH_SOCK="$(gpgconf --list-dirs agent-ssh-socket)"
  fi
fi
